<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fooddiary.FoodDiaryAddEntryActivity">

    <EditText
        android:id="@+id/food_diary_add_entry_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter The Thing!"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_name_food_diary_add_entry"
        app:layout_constraintTop_toTopOf="parent">
        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/text_name_food_diary_add_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/text_name_food_diary_add_entry"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/food_diary_add_entry_edit"
        app:layout_constraintEnd_toStartOf="@+id/food_diary_add_entry_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/food_diary_add_entry_edit" />

    <Button
        android:id="@+id/food_diary_add_entry_save"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/food_diary_add_entry_edit">

        <TextView
            android:id="@+id/label_food_diary_add_entry_commentary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:text="Commentary" />

        <EditText
            android:id="@+id/text_food_diary_add_entry_commentary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLines="4"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>